{
  "name": "@agile-solid/twind",
  "version": "1.0.0",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "scripts": {
    "dts": "tsc src/index.ts --declaration --emitDeclarationOnly --skipLibCheck --target esnext --moduleResolution node --outDir dist",
    "build": "vite build && npm run dts"
  },
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./tailwind.config": "./tailwind.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huijiewei/agile-solid.git",
    "directory": "packages/twind"
  },
  "peerDependencies": {
    "@twind/core": "^1.0.3",
    "@twind/preset-autoprefix": "^1.0.3",
    "@twind/preset-tailwind": "^1.0.3",
    "@twind/preset-ext": "^1.0.3"
  },
  "dependencies": {
    "@agile-solid/utils": "*"
  },
  "devDependencies": {
    "@twind/core": "^1.0.3",
    "@twind/preset-tailwind": "^1.0.3"
  }
}
